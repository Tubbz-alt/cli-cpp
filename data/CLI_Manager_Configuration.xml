<cli-manager-configuration>

    <!--  Logging Configuration 
    
        - Log Levels
          * info
          * debug
          * trace
    -->
    <logging enabled="true" 
             log_path="cli.log"
             log_level="debug" />

    <!-- Type of Connection 
          
          Supported Options:
          - SOCKET : Connect via network
    -->
    <connection-type value="SOCKET" />


    <!-- Socket CLI Configuration -->
    <socket-configuration>

        <!-- Listening Port Number -->
        <listening-port value="12344" />

        <!-- Window Size -->
        <window-size rows="30" cols="120" />

    </socket-configuration>


    <!-- Command Configuration -->
    <command-configuration path="../data/Command_Configuration.xml" />

    <!-- CLI Name -->
    <cli>
        <!-- CLI Title String -->
        <title value="Command-Line Interface Demo" />
        
        <!-- Max size of the command queue (Basic history memorization). -->
        <command-queue max_size="100" />
        
        <!-- Flag if we want to redirect stdout and stderr to log. -->
        <redirect stdout="true"
                  stderr="true" />

    </cli>

</cli-manager-configuration>
