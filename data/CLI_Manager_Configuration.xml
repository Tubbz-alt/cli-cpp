<cli_manager_configuration>

    <!--  Logging Configuration 
    
        - Log Levels
          * info
          * debug
          * trace
    -->
    <logging enabled="true" 
             log_path=""
             log_level="trace" />


    
    <!-- Socket CLI Configuration -->
    <connection_configuration>

        <connection conn_type="SOCKET"
                    session_type="TELNET" >

            <!-- Listening Port Number -->
            <listening-port value="12344" />

            <!-- Window Size -->
            <window-size rows="50" cols="180" />

            <!-- Read Timeout Sleep Time -->
            <read-timeout-sleep-time microseconds="5000" />
        
            <!-- Max Number of Connections -->
            <max-connections value="5" />

        </connection>

        <connection conn_type="SOCKET"
                    session_type="JSON" >

            <!-- Listening Port Number -->
            <listening-port value="12345" />

            <!-- Read Timeout Sleep Time -->
            <read-timeout-sleep-time microseconds="5000" />

            <!-- Max Number of Connections -->
            <max-connections value="5" />

        </connection>

    </connection_configuration>


    <!-- Command Configuration -->
    <command-configuration path="../data/Command_Configuration.xml" />


    <!-- CLI Configuration -->
    <cli>

        <!-- CLI Title String -->
        <title value="Command-Line Interface Demo" />
        
        <!-- Max size of the command queue (Basic history memorization). -->
        <command-queue max_size="100" />
        
        <!-- Flag if we want to redirect stdout and stderr to log. -->
        <redirect stdout="false"
                  stderr="false" />

        <!-- Alias Configuration -->
        <alias-support enable="true" >

            <!-- Path to the alias list. Stored as an XML File. -->
            <alias-list  pathname="../data/Command_Alias_List.xml" />
             
        </alias-support>
    
    
        <!-- Variable Configuration -->
        <variable-support enable="true" >

            <!-- Command-Variable Path -->
            <variable-list pathname="../data/Command_Variable_List.xml" />
    
        </variable-support>

        <!-- Async Window Refresh Time -->
        <async-message-refresh-time ms="1500" />

    </cli>

    <!-- Event Manager Configuration -->
    <event-manager>
        
        <!-- Max capacity of the Event Manager's event queue.
            - More slots means you can back up more items.  If you fill
              up the queue, doing a push will become a blocking operation until
              room opens up on the queue.
        -->
        <event-queue-max-capacity value="10000" />

        <!-- Number of work queue threads.  More threads means you can process more jobs
             in parallel.  This will prevent blocking when a particular job is taking
             a large number of resources. Two is required so that when a CLI job is
             running, refresh requests can still be made to the screen.
        -->
        <work-queue-thread-count value="2" />

    </event-manager>

</cli_manager_configuration>
